//ğŸ¤¨
class Solution {
public:
    vector<int> findMinHeightTrees(int n, vector<vector<int>>& edges) {
        if (n == 1) return {0}; // å¤„ç† n=1 çš„ç‰¹æ®Šæƒ…å†µ

        vector<vector<int>> adj(n);
        vector<int> degree(n, 0);
        // æ„å»ºé‚»æ¥è¡¨å’Œåº¦æ•°
        for (auto& e : edges) {
            int u = e[0], v = e[1];
            adj[u].push_back(v);
            adj[v].push_back(u);
            degree[u]++;
            degree[v]++;
        }

        queue<int> q;
        // åˆå§‹åŒ–ï¼šå°†æ‰€æœ‰å¶å­èŠ‚ç‚¹ï¼ˆåº¦=1ï¼‰å…¥é˜Ÿ
        for (int i = 0; i < n; i++) {
            if (degree[i] == 1) q.push(i);
        }

        int remaining = n;
        while (remaining > 2) {
            int size = q.size();
            remaining -= size;
            // å‰¥ç¦»å½“å‰å±‚çš„æ‰€æœ‰å¶å­èŠ‚ç‚¹
            for (int i = 0; i < size; i++) {
                int leaf = q.front(); q.pop();
                // æ›´æ–°ç›¸é‚»èŠ‚ç‚¹çš„åº¦æ•°
                for (int neighbor : adj[leaf]) {
                    if (--degree[neighbor] == 1) {
                        q.push(neighbor);
                    }
                }
            }
        }

        // å‰©ä½™èŠ‚ç‚¹å³ä¸ºç­”æ¡ˆ
        vector<int> res;
        while (!q.empty()) {
            res.push_back(q.front());
            q.pop();
        }
        return res;
    }
};
